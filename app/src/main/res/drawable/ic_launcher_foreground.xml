<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Subtle Glow Layer -->
    <path
        android:pathData="M54,54m-35,0a35,35 0,1 1,70 0a35,35 0,1 1,-70 0"
        android:fillAlpha="0.15">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="35"
                android:type="radial">
                <item android:color="#FF00F2FF" android:offset="0.0" />
                <item android:color="#0000F2FF" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Pulse Wave - Main Visual Element -->
    <path
        android:pathData="M20,54 L28,54 L32,38 L38,70 L44,34 L50,66 L54,54 L58,42 L64,62 L70,46 L76,58 L80,54 L88,54"
        android:strokeWidth="4"
        android:strokeLineCap="round"
        android:strokeLineJoin="round"
        android:fillColor="#00000000">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startX="20"
                android:startY="54"
                android:endX="88"
                android:endY="54"
                android:type="linear">
                <item android:color="#FF00F2FF" android:offset="0.0" />
                <item android:color="#FF0066FF" android:offset="0.5" />
                <item android:color="#FFFF0080" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Secondary Pulse Wave (Faded) -->
    <path
        android:pathData="M24,54 L30,54 L34,44 L40,64 L46,40 L52,60 L56,54 L60,48 L66,58 L72,50 L78,56 L84,54"
        android:strokeWidth="2"
        android:strokeLineCap="round"
        android:strokeLineJoin="round"
        android:fillColor="#00000000"
        android:strokeAlpha="0.3">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startX="24"
                android:startY="54"
                android:endX="84"
                android:endY="54"
                android:type="linear">
                <item android:color="#FF00D4FF" android:offset="0.0" />
                <item android:color="#FF00A2FF" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Play Button Circle Background -->
    <path
        android:pathData="M54,72m-12,0a12,12 0,1 1,24 0a12,12 0,1 1,-24 0"
        android:fillAlpha="0.9">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="72"
                android:gradientRadius="12"
                android:type="radial">
                <item android:color="#FF0066FF" android:offset="0.0" />
                <item android:color="#FF004499" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Play Button Triangle -->
    <path
        android:pathData="M50,67 L50,77 L60,72 Z"
        android:fillColor="#FFFFFFFF"/>

    <!-- Accent Dot -->
    <path
        android:pathData="M78,38 m-3,0 a3,3 0 1,1 6,0 a3,3 0 1,1 -6,0"
        android:fillColor="#FFFF0080"/>

    <!-- Shine Overlay -->
    <path
        android:pathData="M54,25 C38,25 25,38 25,54"
        android:strokeWidth="0.8"
        android:strokeColor="#55FFFFFF"
        android:strokeLineCap="round"/>

</vector>
