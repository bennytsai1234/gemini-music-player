<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0A0E1A"
                android:centerColor="#121832"
                android:endColor="#1A1625"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Subtle Wave Pattern Decoration -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#0500F2FF"
                android:centerColor="#00000000"
                android:endColor="#05FF0080"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Center Icon Container -->
    <item
        android:width="140dp"
        android:height="140dp"
        android:gravity="center">

        <layer-list>
            <!-- Outer Glow Effect -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#1A00F2FF"/>
                    <size android:width="140dp" android:height="140dp"/>
                </shape>
            </item>

            <!-- Inner Glow -->
            <item
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp">
                <shape android:shape="oval">
                    <solid android:color="#260066FF"/>
                    <size android:width="120dp" android:height="120dp"/>
                </shape>
            </item>

            <!-- Icon Background -->
            <item android:gravity="center">
                <vector
                    android:width="100dp"
                    android:height="100dp"
                    android:viewportWidth="100"
                    android:viewportHeight="100">

                    <!-- Pulse Wave -->
                    <path
                        android:fillColor="#00000000"
                        android:strokeColor="#FFFFFF"
                        android:strokeWidth="3"
                        android:strokeLineCap="round"
                        android:strokeLineJoin="round"
                        android:pathData="M10,50 L20,50 L25,35 L32,65 L40,30 L48,62 L50,50 L55,40 L62,58 L70,42 L78,55 L85,50 L90,50"/>

                    <!-- Play Button Circle -->
                    <path
                        android:fillColor="#0066FF"
                        android:pathData="M50,72m-10,0a10,10 0,1 1,20 0a10,10 0,1 1,-20 0"/>

                    <!-- Play Triangle -->
                    <path
                        android:fillColor="#FFFFFF"
                        android:pathData="M47,68 L47,76 L55,72 Z"/>

                    <!-- Accent Dot -->
                    <path
                        android:fillColor="#FF0080"
                        android:pathData="M75,35 m-2.5,0 a2.5,2.5 0 1,1 5,0 a2.5,2.5 0 1,1 -5,0"/>
                </vector>
            </item>
        </layer-list>
    </item>
</layer-list>
