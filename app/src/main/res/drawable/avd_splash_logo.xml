<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="108dp"
            android:height="108dp"
            android:viewportWidth="108"
            android:viewportHeight="108">
            <group
                android:name="logo_group"
                android:pivotX="54"
                android:pivotY="54">

                <!-- Swirl Outer -->
                <group android:name="swirl_group" android:pivotX="54" android:pivotY="54">
                    <path
                        android:fillType="evenOdd"
                        android:pathData="M54,20 C35.2,20 20,35.2 20,54 C20,72.8 35.2,88 54,88 C62,88 69.3,85.2 75,80.5 L68,73.5 C64,76.3 59.2,78 54,78 C40.7,78 30,67.3 30,54 C30,40.7 40.7,30 54,30 L54,20 Z">
                        <aapt:attr name="android:fillColor">
                            <gradient
                                android:startX="20"
                                android:startY="20"
                                android:endX="75"
                                android:endY="88"
                                android:type="linear">
                                <item android:color="#FF00F2FF" android:offset="0.0" />
                                <item android:color="#FF0066FF" android:offset="1.0" />
                            </gradient>
                        </aapt:attr>
                    </path>
                </group>

                <!-- Music Note -->
                <group android:name="note_group" android:pivotX="50" android:pivotY="55">
                    <path
                        android:pathData="M60,30 L60,55 C60,60.5 55.5,65 50,65 C44.5,65 40,60.5 40,55 C40,49.5 44.5,45 50,45 C52,45 53.8,45.6 55.3,46.6 L55.3,30 L65,30 L65,35 L60.3,35 L60.3,30 Z"
                        android:fillColor="#FFFFFFFF"/>
                </group>

            </group>
        </vector>
    </aapt:attr>

    <!-- Rotation Animation for Swirl -->
    <target android:name="swirl_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="2000"
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="360"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:repeatCount="infinite" />
        </aapt:attr>
    </target>

    <!-- Pulsing Animation for Logo Group -->
    <target android:name="logo_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="1000"
                    android:propertyName="scaleX"
                    android:valueFrom="0.8"
                    android:valueTo="1.0"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:duration="1000"
                    android:propertyName="scaleY"
                    android:valueFrom="0.8"
                    android:valueTo="1.0"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:duration="1000"
                    android:propertyName="alpha"
                    android:valueFrom="0.7"
                    android:valueTo="1.0"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/linear" />
            </set>
        </aapt:attr>
    </target>

</animated-vector>
