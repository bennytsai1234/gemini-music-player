<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="108dp"
            android:height="108dp"
            android:viewportWidth="108"
            android:viewportHeight="108">

            <!-- Main Logo Group for Scale Animation -->
            <group
                android:name="logo_group"
                android:pivotX="54"
                android:pivotY="54">

                <!-- Glow Ring for Pulse Effect -->
                <group android:name="glow_group" android:pivotX="54" android:pivotY="54">
                    <path
                        android:name="glow_ring"
                        android:pathData="M54,54m-30,0a30,30 0,1 1,60 0a30,30 0,1 1,-60 0"
                        android:strokeWidth="2"
                        android:strokeColor="#4000F2FF"
                        android:fillColor="#00000000"/>
                </group>

                <!-- Pulse Wave Path -->
                <group android:name="wave_group">
                    <path
                        android:name="pulse_wave"
                        android:pathData="M20,54 L28,54 L32,38 L38,70 L44,34 L50,66 L54,54 L58,42 L64,62 L70,46 L76,58 L80,54 L88,54"
                        android:strokeWidth="4"
                        android:strokeLineCap="round"
                        android:strokeLineJoin="round"
                        android:fillColor="#00000000"
                        android:trimPathEnd="0">
                        <aapt:attr name="android:strokeColor">
                            <gradient
                                android:startX="20"
                                android:startY="54"
                                android:endX="88"
                                android:endY="54"
                                android:type="linear">
                                <item android:color="#FF00F2FF" android:offset="0.0" />
                                <item android:color="#FF0066FF" android:offset="0.5" />
                                <item android:color="#FFFF0080" android:offset="1.0" />
                            </gradient>
                        </aapt:attr>
                    </path>
                </group>

                <!-- Play Button -->
                <group android:name="play_group" android:pivotX="54" android:pivotY="72">
                    <!-- Play Button Circle -->
                    <path
                        android:name="play_circle"
                        android:pathData="M54,72m-12,0a12,12 0,1 1,24 0a12,12 0,1 1,-24 0"
                        android:fillAlpha="0.9">
                        <aapt:attr name="android:fillColor">
                            <gradient
                                android:centerX="54"
                                android:centerY="72"
                                android:gradientRadius="12"
                                android:type="radial">
                                <item android:color="#FF0066FF" android:offset="0.0" />
                                <item android:color="#FF004499" android:offset="1.0" />
                            </gradient>
                        </aapt:attr>
                    </path>

                    <!-- Play Triangle -->
                    <path
                        android:name="play_triangle"
                        android:pathData="M50,67 L50,77 L60,72 Z"
                        android:fillColor="#FFFFFFFF"/>
                </group>

                <!-- Accent Dot -->
                <path
                    android:name="accent_dot"
                    android:pathData="M78,38 m-3,0 a3,3 0 1,1 6,0 a3,3 0 1,1 -6,0"
                    android:fillColor="#FFFF0080"
                    android:fillAlpha="0"/>

            </group>
        </vector>
    </aapt:attr>

    <!-- Wave Drawing Animation -->
    <target android:name="pulse_wave">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="800"
                android:propertyName="trimPathEnd"
                android:valueFrom="0"
                android:valueTo="1"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>

    <!-- Glow Ring Pulse Animation -->
    <target android:name="glow_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="1000"
                    android:startOffset="500"
                    android:propertyName="scaleX"
                    android:valueFrom="0.8"
                    android:valueTo="1.3"
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
                <objectAnimator
                    android:duration="1000"
                    android:startOffset="500"
                    android:propertyName="scaleY"
                    android:valueFrom="0.8"
                    android:valueTo="1.3"
                    android:repeatCount="infinite"
                    android:repeatMode="restart"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

    <!-- Glow Ring Fade Animation -->
    <target android:name="glow_ring">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:startOffset="500"
                android:propertyName="strokeAlpha"
                android:valueFrom="0.4"
                android:valueTo="0"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:interpolator="@android:interpolator/linear" />
        </aapt:attr>
    </target>

    <!-- Main Logo Pulse Animation (Heartbeat Effect) -->
    <target android:name="logo_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="857"
                    android:startOffset="800"
                    android:propertyName="scaleX"
                    android:valueFrom="1.0"
                    android:valueTo="1.05"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/fast_out_slow_in" />
                <objectAnimator
                    android:duration="857"
                    android:startOffset="800"
                    android:propertyName="scaleY"
                    android:valueFrom="1.0"
                    android:valueTo="1.05"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/fast_out_slow_in" />
            </set>
        </aapt:attr>
    </target>

    <!-- Play Button Pulse Animation -->
    <target android:name="play_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="600"
                    android:startOffset="600"
                    android:propertyName="scaleX"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:interpolator="@android:interpolator/overshoot" />
                <objectAnimator
                    android:duration="600"
                    android:startOffset="600"
                    android:propertyName="scaleY"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:interpolator="@android:interpolator/overshoot" />
            </set>
        </aapt:attr>
    </target>

    <!-- Accent Dot Fade In -->
    <target android:name="accent_dot">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="1000"
                android:propertyName="fillAlpha"
                android:valueFrom="0"
                android:valueTo="1"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>

</animated-vector>
